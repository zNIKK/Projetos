<%- include('includes/head') %>
    <%- include('includes/nav') %>

        <div class="container">
            <div class="row">
                <div class="col-lg-2"></div>

                <div class="col-lg-8 my-5">
                    <h1 class="text-center">Contato</h1>
                    <p class="text-center lead">Crie ou edite seus contatos abaixo</p>

                    <%- include('includes/messages'); %>
                        <% if(contato._id) { %>
                            <form action="/contato/edit/<%= contato._id %>" method="post">
                        <% } else { %>
                        <form action="/contato/register" method="post">
                        <% } %> 
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                            <div class="mb-3">
                                <label for="nome" class="form-label">Nome</label>
                                <input value="<%= contato.nome %> " type="text" class="form-control" id="nome" name="nome">
                            </div>
                            <div class="mb-3">
                                <label for="sobrenome" class="form-label">sobrenome</label>
                                <input value="<%= contato.sobrenome %>" type="text" class="form-control" id="sobrenome" name="sobrenome">
                            </div>
                            <div class="mb-3">
                                <label for="email" class="form-label">email</label>
                                <input value="<%= contato.email %>" type="text" class="form-control" id="email" name="email">
                            </div>
                            <div class="mb-3">
                                <label for="telefone" class="form-label">telefone</label>
                                <input value="<%= contato.telefone %>" type="tel" class="form-control" id="telefone" name="telefone">
                            </div>
                            <button type="submit" class="btn btn-primary">Salvar</button>
                        </form>
                </div>

                <div class="col-lg-2"></div>
            </div>
        </div>
        <%- include('includes/footer') %>